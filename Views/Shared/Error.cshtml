@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2><i class="bi bi-exclamation-triangle"></i> Error</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <h4>@Model.ErrorMessage</h4>
                        </div>
                    }
                    else
                    {
                        <h4 class="text-danger">An error occurred while processing your request.</h4>
                    }
                    <p>Please try again or contact support if the problem persists.</p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Back to Home
                        </a>
                    </div>
                </div>
                
                <div class="card-footer text-muted">
                    <small>
                        @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
                        {
                            <div class="development-notice">
                                <h6 class="mb-2">Development Mode</h6>
                                <p class="small mb-0">
                                    <strong>Note:</strong> The Development environment shouldn't be enabled for deployed applications.
                                    It can result in displaying sensitive information from exceptions to end users.
                                </p>
                            </div>
                        }
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
